<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.CustomCard"
    android:id="@+id/card_view_mini_passive"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="4dp"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_course_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="ECDIS with AIS"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/label_course_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:paddingBottom="16dp"
                android:paddingRight="16dp"
                android:text="Deck" />

            <TextView
                android:id="@+id/label_course_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:paddingBottom="16dp"
                android:paddingRight="16dp"
                android:lines="2"
                android:ellipsize="end"
                android:text="An Electronic Chart Display Information System (ECDIS)"
                android:textColor="@color/black_semi_transparent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="12dp"
                android:background="@color/cardview_shadow_start_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rect"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_reserve"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:text="RESERVE"
                    android:textColor="@color/google_plus_primary_color"/>

                <Button
                    android:id="@+id/button_learn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="LEARN MORE"
                    android:textColor="@color/colorAccent"/>

            </LinearLayout>

        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_course_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:riv_corner_radius_bottom_left="0dp"
            app:riv_corner_radius_bottom_right="@dimen/card_corner_radius"
            app:riv_corner_radius_top_left="0dp"
            app:riv_corner_radius_top_right="@dimen/card_corner_radius" />

    </LinearLayout>

</android.support.v7.widget.CardView>
