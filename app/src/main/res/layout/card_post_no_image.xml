<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_mini_passive"
    style="@style/Widget.CustomCard"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_rect"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_branch_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:fitsSystemWindows="true"
                android:src="@drawable/sample_profile_photo"
                app:civ_border_color="@color/layout_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_post_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enroll Now at Newsim Makati!"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/label_post_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Newsim Makati â€¢ 6 hours ago"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/label_post_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:maxLines="6"
            android:text="@string/sample_description"
            android:textColor="@color/black_semi_transparent"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
