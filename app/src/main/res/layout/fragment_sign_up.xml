<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_rect"
        android:orientation="vertical"
        android:paddingTop="48dp">

        <EditText
            android:id="@+id/field_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="56dp"
            android:layout_marginStart="56dp"
            android:hint="Email"
            android:inputType="text"
            android:maxLines="1"
            android:textAppearance="@style/TextRobotoLight"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/field_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="56dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="16dp"
            android:hint="First Name"
            android:inputType="text"
            android:maxLines="1"
            android:textAppearance="@style/TextRobotoLight"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/field_middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="56dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="16dp"
            android:hint="Middle Name"
            android:inputType="text"
            android:maxLines="1"
            android:textAppearance="@style/TextRobotoLight"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/field_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="56dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="16dp"
            android:hint="Last Name"
            android:inputType="text"
            android:maxLines="1"
            android:textAppearance="@style/TextRobotoLight"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/field_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="56dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="16dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textAppearance="@style/TextRobotoLight"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/field_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="56dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="16dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textAppearance="@style/TextRobotoLight"
            android:textSize="16sp"/>

        <com.dd.CircularProgressButton
            android:id="@+id/button_sign_up"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cpb_colorIndicator="@color/login_button_color"
            app:cpb_colorProgress="#f1f1f1"
            app:cpb_cornerRadius="2dp"
            app:cpb_selectorComplete="@drawable/selector_sign_in_button_success"
            app:cpb_selectorError="@drawable/selector_sign_in_button"
            app:cpb_selectorIdle="@drawable/selector_sign_in_button"
            app:cpb_textComplete="Successful!"
            app:cpb_textError="Retry"
            app:cpb_textIdle="Sign Up"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            android:gravity="center_horizontal"
            android:text="Have an Account?"/>

        <TextView
            android:id="@+id/link_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="SIGN IN"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

